<Window x:Class="NaychnaKonferencia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NaychnaKonferencia"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" MinHeight = "450" MinWidth = "800" MaxHeight="600" MaxWidth="800" WindowStartupLocation = "CenterScreen">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height = "100" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions >
        <Grid Grid.Row = "0" Background = "#FFE7FABF" >
            <TextBlock Text = " ООО Научная конференция" HorizontalAlignment = "Center" VerticalAlignment = "Center" FontSize = "40" />
        </Grid >
        <Frame NavigationUIVisibility = "Hidden" x:Name = "MainFrame" Margin = "10,110,10,10" Grid.RowSpan = "2" />
        <Button x:Name="Avtorizacia" Click="Avtorizacia_Click" Margin="0,0,725,31" Content="Назад" Background="Aqua"/>
    </Grid>
</Window>
